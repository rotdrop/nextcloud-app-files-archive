{
  "name": "rotdrop/nextcloud-app-files-archive",
  "description": "Inspect, mount and extract file-archives",
  "type": "project",
  "license": "AGPL",
  "authors": [
    {
      "name": "Claus-Justus Heine",
      "email": "himself@claus-justus-heine.de"
    }
  ],
  "require": {
    "jarodxxx/zippy": "^1.0.2",
    "gemorroj/archive7z": "^5.4",
    "nelexa/zip": "^4.0",
    "pear/archive_tar": "^1.4",
    "phpclasses/php-iso-file": "^0.5.1",
    "sensiolabs/ansi-to-html": "^1.2",
    "symfony/console": "^6.0",
    "symfony/event-dispatcher": "*",
    "wapmorgan/cab-archive": "^0.0.7",
    "wapmorgan/unified-archive": "dev-master"
  },
  "require-dev": {
    "bamarni/composer-bin-plugin": "^1.8",
    "phpmd/phpmd" : "@stable",
    "squizlabs/php_codesniffer": "3.*",
    "zebra-north/phpcs-short-types": "^1.0"
  },
  "config": {
    "optimize-autoloader": true,
    "classmap-authoritative": true,
    "platform": {
      "php": "8.1"
    },
    "allow-plugins": {
      "bamarni/composer-bin-plugin": true
    }
  },
  "repositories": [
    {
      "type": "git",
      "url": "https://github.com/jarodxxx/Zippy.git"
    }
  ],
  "scripts": {
    "lint": "find . -name \\*.php -not -path './vendor/*' -not -path './build/*' -print0 | xargs -0 -n1 php -l",
    "cs:check": "php-cs-fixer fix --dry-run --diff",
    "cs:fix": "php-cs-fixer fix"
  },
  "extra": {
    "bamarni-bin": {
      "bin-links": true,
      "target-directory": "vendor-bin",
      "forward-command": true
    }
  }
}
